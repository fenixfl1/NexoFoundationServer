{
  "name": "nexo-foundation",
  "version": "1.0.0",
  "main": "index.js",
  "bin": "dist/src/index.js",
  "pkg": {
    "assets": [
      "dist/**/*.hbs",
      "dist/**/*.sql",
      "dist/**/*.json"
    ],
    "scripts": [
      "dist/**/*.js"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "build",
    "compress": "GZip"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon --watch src --exec ts-node --transpile-only -r tsconfig-paths/register src/index.ts",
    "start:prod": "node -r tsconfig-paths/register dist/index.js",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "lint": "eslint src/**/*.{ts,tsx}",
    "format": "prettier --write './src/**/*.{ts,tsx,js,json}'",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration": "npx typeorm-ts-node-commonjs migration:generate -d ./src/data-source.ts ./src/migrations/migration",
    "migration:create": "typeorm migration:create ./src/migrations/PostRefactoring",
    "migration:run": "npm run typeorm -- migration:run -d src/data-source.ts",
    "migration:fake": "npx typeorm-ts-node-commonjs migration:run -d ./src/data-source.ts --fake",
    "migration:revert": "npm run typeorm -- migration:revert -d src/data-source.ts"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/joi": "^17.2.2",
    "amqplib": "^0.10.8",
    "bcrypt": "^6.0.0",
    "boxen": "^6.2.1",
    "chalk": "^4.1.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.1",
    "googleapis": "^153.0.0",
    "handlebars": "^4.7.8",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "nodemailer": "^7.0.5",
    "nodemon": "^3.1.10",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "0.3.25"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/amqplib": "^0.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.13.10",
    "@types/nodemailer": "^6.4.17",
    "esbuild": "^0.25.8",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^9.31.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  }
}
